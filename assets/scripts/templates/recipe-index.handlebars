  <section class="recipe">
    <h2 data-id="{{recipe.id}}">
      <small>Name:</small> {{recipe.name}}
    </h2>
    <p>
      <small>Description:</small>
      {{#if recipe.description}}
        {{recipe.description}}
      {{else}}
        No description provided.
      {{/if}}
    </p>

    {{#each recipe.ingredients_list as |ing|}}
    <p>{{ing.amount}} {{ing.unit}} of {{ing.ingredient}}</p>
    {{/each}}

    {{#each recipe.directions as |dir|}}
    <p>{{dir.step}}</p>
    {{/each}}

    <button class="btn btn-danger" data-id="{{recipe.id}}">Remove</button>
  </section>
